# ============================================================================
# Kibitz Docker Environment Configuration Template
# Copy this file to .env and customize the values
# ============================================================================

# Port Configuration
KIBITZ_PORT=3000
WS_MCP_PORT=10125

# Path Configuration
# Absolute path to your user projects directory (where LLM will work)
USER_PROJECTS_PATH=/Users/test/Downloads/kinode/user/gitrepo/projects

# Optional: Path to ws-mcp source code for development
WS_MCP_PATH=/Users/test/Downloads/kinode/ws-mcp

# Optional: Path to custom ws-mcp config
WS_MCP_CONFIG_PATH=./docker/config/ws-mcp-config.json

# Security Configuration
SECURE_MODE=true

# API Keys (optional, for extended functionality)
BRAVE_API_KEY=your_brave_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Development Configuration
NODE_ENV=production
DEBUG=false

# Database Configuration (optional)
DATABASE_PATH=/app/kibitz/data/kibitz.db
LOGS_PATH=/app/logs

# Resource Limits (adjust based on your system)
# CPU_LIMIT=4.0
# MEMORY_LIMIT=8G
# CPU_RESERVATION=2.0
# MEMORY_RESERVATION=4G 